---
export interface Props {
  href: string;
  target?: string;
}
const { href, target = "_blank" } = Astro.props;
---

<a
  href={href}
  target={target}
  class="bg-slate-800 border-1 border-gray-500 rounded-full py-2 px-6 w-fit h-fit flex items-center text-xs md:text-md hover:scale-105 transform transition duration-300 will-change-transform"
>
  <slot />
</a>
