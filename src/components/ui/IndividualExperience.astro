---
export interface Props {
  title: string;
  company: string;
  date: string;
  description: string
}
const { title, company, date, description} = Astro.props;
---

<div class="border-l-2 border-blue-500/20 pl-6 space-y-20 ml-5">
  <div class="flex flex-col md:flex-row gap-2 md:gap-6 relative">
    <div class="absolute -left-[31px] top-1.5 w-3 h-3 bg-accent rounded-full"></div>

    <div class="md:w-1/2">
      <h3 class="text-accent font-title font-semibold text-xl md:text-2xl">
        {title}
      </h3>
      <h4 class="font-bold text-md md:text-xl">{company}</h4>
      <p class="text-sm text-secondary mt-0 mb-0 md:mb-20">{date}</p>
    </div>

    <div class="md:w-1/2 text-white text-md md:text-lg leading-relaxed mb-10 md:mb-0">
      {description}
    </div>
  </div>
</div>
