---
import IconExperience from "./icons/IconExperience.astro";
import IndividualExperience from "./ui/IndividualExperience.astro";

const experiences = [
  {
    title: "Web Design and Development",
    company: "Freelancer",
    date: "Present",
    description: "Responsive design and front-end development for client projects using Astro and Tailwind CSS."
  },
  {
    title: "Marketing Intern",
    company: "TV Azteca",
    date: "Jan 2025 – Apr 2025",
    description: "Created digital content for social media and website. Supported communication strategy and visual design."
  },
  {
    title: "Marketing Assistant",
    company: "Central Granel",
    date: "Aug 2024 – Dec 2024",
    description: "Conducted market research, developed brand identity, and analyzed competitors for retail expansion."
  }
];
---

<section class="md:my-25">
  <h2 class="font-title font-bold text-white flex items-center gap-2 mb-8 text-2xl md:text-4xl">
    <IconExperience />
    Relevant Experience
  </h2>

  {experiences.map(exp => (
    <IndividualExperience 
      title={exp.title}
      company={exp.company}
      date={exp.date}
      description={exp.description}
    />
  ))}
</section>
